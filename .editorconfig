# EditorConfig is awesome: https://editorconfig.org

# Top-level configuration file
root = true

# Match all files
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Python files
[*.py]
max_line_length = 88

# YAML files
[*.yml]
indent_style = space
indent_size = 2
